<Window x:Class="MOTORPARTS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="LightBlue"
        Title="Motorcycle Parts" Height="500" Width="900">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <DockPanel Grid.Row="0" Margin="0,10,0,20">
            <TextBlock Text="MOTORCYCLE PARTS"
                       FontWeight="Bold"
                       FontFamily="Times New Roman"
                       FontSize="28"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Left"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Right">

                <Border Background="White"
                        CornerRadius="4"
                        BorderBrush="Gray"
                        BorderThickness="1">

                    <DockPanel>
                        <Image Source="https://cdn-icons-png.flaticon.com/512/622/622669.png"
                               Width="14" Height="14" Margin="5,0,5,0"/>

                        <TextBox Name="txtSearch"
                                 Width="200"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="13"
                                 Padding="2"
                                 VerticalContentAlignment="Center"
                                 TextChanged="txtSearch_TextChanged"/>
                    </DockPanel>
                </Border>

            </StackPanel>
        </DockPanel>

        <!-- INPUT FIELDS -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,0,0,20">

            <StackPanel Margin="5" Width="120">
                <TextBlock Text="Part ID"/>
                <TextBox Name="txtPartID" IsReadOnly="True"/>
            </StackPanel>

            <StackPanel Margin="5" Width="150">
                <TextBlock Text="Part Name"/>
                <TextBox Name="txtPartName"/>
            </StackPanel>

            <StackPanel Margin="5" Width="130">
                <TextBlock Text="Part Number"/>
                <TextBox Name="txtPartNumber"/>
            </StackPanel>

            <StackPanel Margin="5" Width="200">
                <TextBlock Text="Description"/>
                <TextBox Name="txtDescription"/>
            </StackPanel>

            <StackPanel Margin="5" Width="100">
                <TextBlock Text="Price"/>
                <TextBox Name="txtPrice"/>
            </StackPanel>

        </StackPanel>

        <!-- BUTTONS -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2">
            <Button Content="Add Part"
                    Width="100" Height="35"
                    Foreground="White" Background="Black"
                    Margin="5" Click="BtnAdd_Click"/>

            <Button Content="Edit Part"
                    Width="100" Height="35"
                    Margin="5" Click="BtnEdit_Click"/>

            <Button Content="Delete Part"
                    Width="100" Height="35"
                    Margin="5" Click="BtnDelete_Click"/>
        </StackPanel>

        <!-- DATA GRID -->
        <DataGrid Name="dgParts"
                  Grid.Row="3"
                  AutoGenerateColumns="False"
                  AlternatingRowBackground="LightGray"
                  Margin="0,10,0,0"
                  Background="White"
                  BorderBrush="Gray"
                  BorderThickness="1"
                  IsReadOnly="True"
                  SelectionChanged="dgParts_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Part ID" Binding="{Binding Part_ID}" Width="*"/>
                <DataGridTextColumn Header="Part Name" Binding="{Binding Part_Name}" Width="*"/>
                <DataGridTextColumn Header="Part Number" Binding="{Binding Part_Number}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Descriptions}" Width="2*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Window>
